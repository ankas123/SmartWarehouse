<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/additem_cordi"

    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/additem_appbar"
        android:layout_height="256dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/additem_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:background="@color/colorPrimary"
            app:title="New Item">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:src="@drawable/table"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="70dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_above="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/additem_grid">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/additem_MyToolbar"


                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>




    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:hint="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:id="@+id/additem_textView4"
                android:layout_row="0"
                android:layout_column="0"
                tools:textSize="30sp" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="4">




                <TextView
                    android:text="Unit Weight :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:textSize="20sp"
                    android:id="@+id/additem_textView5"
                    android:layout_row="1"
                    android:layout_column="0" />

                <EditText
                    android:hint="Weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:textSize="20sp"
                    android:id="@+id/additem_textView6"
                    android:layout_row="1"
                    android:layout_column="1" />

            </GridLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:layout_anchor="@id/additem_appbar"
        app:layout_anchorGravity="bottom|right|end"

        android:id="@+id/additem_button"
        android:layout_weight="1"
        android:src="@drawable/tick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        app:elevation="8dp" />





</android.support.design.widget.CoordinatorLayout>